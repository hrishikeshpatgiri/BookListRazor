@page
@model BookListRazor.UpsertModel

<br />
<h2 class="text-info">@(Model.Book.Id!=0 ? "Edit": "Create") Book</h2>
<br />

<div class="border container" style="padding:30px;">

    <form method="post">
        @if (Model.Book.Id!=0)
        {
            <input type="Hidden" asp-for="Book.Id">
        }
        <input type="Hidden" asp-for="Book.Id">
        <div class="text-info" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.Name">
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.Author">
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Book.ISBN">
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                @*<input type="submit" value="Update" class="btn btn-primary form-control" />*@
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id != 0 ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

